system:
  name: "Synapse"
  version: "0.1.0"
  debug: false
  log_level: "INFO"
  log_path: "logs"

memory:
  mongodb:
    uri: "mongodb://localhost:27017/"
    db_name: "synapse_memory"
  redis:
    host: "localhost"
    port: 6379
    db: 0
  activation_threshold: 0.5
  cache_expire_seconds: 3600
  forget_interval: 86400  # 24小时
  forget_ratio: 0.1

rag:
  mongodb:
    uri: "mongodb://localhost:27017/"
    db_name: "synapse_rag"
  embedding_model: "BAAI/bge-large-zh"
  embedding_dimension: 1024
  cache_size: 10000
  batch_size: 32

agent:
  output_inhibitor:
    min_output_interval: 1.0
    similarity_threshold: 0.7
    max_tokens_per_minute: 500
  llm:
    model: "gpt-3.5-turbo"
    temperature: 0.7
    max_tokens: 1000
    timeout: 30

message_bus:
  plugins:
    - name: "text_io"
      enabled: true
      config: {}
    - name: "websocket_io"
      enabled: true
      config:
        port: 8080
    - name: "http_io"
      enabled: true
      config:
        port: 8081

tools:
  code_search:
    enabled: true
    description: "搜索代码库"
  web_search:
    enabled: true
    description: "网络搜索"
  shell_execute:
    enabled: true
    description: "执行shell命令"
  file_operation:
    enabled: true
    description: "文件操作"

# 基础配置
debug: false
log_level: INFO

# 记忆系统配置 
memory_backend: sqlite  # sqlite, redis, mongodb
memory_path: data/memory.db
memory_ttl: 3600  # 记忆过期时间(秒)
memory_max_tokens: 2000  # 上下文最大token数

# RAG系统配置
vector_store: faiss  # faiss, milvus, elasticsearch
vector_dim: 768
chunk_size: 500  # 文档分块大小
chunk_overlap: 50  # 分块重叠长度

# AI模型配置
model_type: openai  # openai, azure, anthropic
model_name: gpt-3.5-turbo
api_base: https://api.openai.com/v1
api_key: ""  # 在实际配置文件中填入

# 工具系统配置
enable_tools: true
tool_timeout: 30  # 工具调用超时时间(秒)
max_tool_calls: 5  # 单次对话最大工具调用次数

# 输入输出配置
input_timeout: 300  # 输入超时时间(秒) 
max_output_tokens: 1000  # 输出最大token数
show_thoughts: true  # 是否显示思考过程